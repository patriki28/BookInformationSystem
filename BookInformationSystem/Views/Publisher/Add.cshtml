@model BookInformationSystem.Models.Domain.Publisher
@{
}

<div class="container pt-5">
    <div class="row">
        <div class="col-md-6">
            <h3>Add Publisher</h3>
            <form asp-action="Add" method="post">
                <div class="form-group">
                    <label asp-for="PublisherName">Publisher Name *</label>
                    <input type="text" class="form-control" asp-for="PublisherName"/>
                    <span asp-validation-for="PublisherName" class="text-danger"></span>
                </div>
                @if(TempData["msg"] != null)
                {
                    <div class="form-group">
                        @TempData["msg"]
                    </div>
                }
                <div class="form-group pt-3">
                    <button type="submit" class="btn btn-dark"><i class="bi bi-save p-1"></i>Save</button>
                    <a href="/Publisher/GetAll" class="btn btn-primary"><i class="bi bi-card-list p-1"></i>List</a>
                </div>
            </form>
        </div>
    </div>
</div>

