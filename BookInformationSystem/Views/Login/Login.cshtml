@model BookInformationSystem.Models.Domain.Admin
@{
    Layout = "";

}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BookInformationSystem.styles.css" asp-append-version="true" />
    <link rel="icon" href="~/images/logo.png" type="image/icon type">

    <title>Book Information System</title>
</head>
<body class="d-flex flex-column flex-md-row align-items-md-center justify-content-md-center">
    <div class="d-flex justify-content-center mb-4 mb-md-0 mr-md-4">
        <img src="~/images/login-image.png" alt="your-image-description" class="img-fluid" style="max-width: 100%; height: auto;" />
    </div>
    <div class="d-flex align-items-center justify-content-center justify-content-md-start p-2 " style="max-width:500px; width:100%;">
        <form asp-action="Login" asp-controller="Login" style="max-width:500px; width:100%;">
        <h1>Login</h1>
        <hr />
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Username" class="control-label"></label>
                <input asp-for="Username" class="form-control" placeholder="Name" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input type="password" asp-for="Password" class="form-control" placeholder="Password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-primary mt-3" />
            </div>

            @if (ViewData["ValidateMessage"] != null)
            {
                <label class="text-danger">@ViewData["ValidateMessage"]</label>
            }
        </form>         
     </div>

   
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");

    }
}
</body>
</html>
