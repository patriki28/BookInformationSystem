@model IEnumerable<BookInformationSystem.Models.Domain.Genre>
@{
}

<div class="container pt-5">
   <div class="row p-3">
        <div class="col-8 text-left">
            <h3>Genre</h3>
        </div>
        <div class="col-4 text-right">
            <a class="btn btn-dark" href="/Genre/Add">+ Add More</a>
        </div>
        <form asp-controller="Genre" asp-action="GetAll">
            <p>
                <input type="text" name="SearchString" />
                <input type="submit" value="Search" />
            </p>
        </form>
    </div>
            <div class="table-responsive">
            <table class="table table-stripped table-bordered table-dark">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var item in Model)
                    {
                        <tr>
                            <td>@item.Name</td>
                            <td>
                                <a class="btn btn-success" href="/Genre/Update?id=@item.Id"><i class="bi bi-pen"></i>

                        </a>
                                <a class="btn btn-danger" onclick="return window.confirm('Are you sure?')" href="/Genre/Delete?id=@item.Id"><i class="bi bi-trash"></i>

                        </a>

                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            </div>
        </div>
  